local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local StarterGui = game:GetService("StarterGui")

-- Criar uma tela (ScreenGui)
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = playerGui

-- Fun√ß√£o para enviar mensagem no novo sistema de chat
local function sendChatMessage(message)
    local chatService = game:GetService("TextChatService")
    local chatChannel = chatService.TextChannels:FindFirstChild("RBXGeneral")
    
    if chatChannel then
        local success, err = pcall(function()
            chatChannel:SendAsync(message)
        end)
        if not success then
            warn("Erro ao enviar mensagem: " .. err)
        end
    else
        warn("N√£o foi poss√≠vel encontrar o canal de chat.")
    end
end

-- Fun√ß√£o para criar um bot√£o
local function createButton(name, text, size, position, color, textColor, parent)
    local button = Instance.new("TextButton")
    button.Name = name
    button.Size = size
    button.Position = position
    button.Text = text
    button.BackgroundColor3 = color
    button.TextColor3 = textColor
    button.Parent = parent
    button.AutoButtonColor = false  -- Desativa a mudan√ßa de cor autom√°tica ao clicar
    button.Active = false  -- Desativa a intera√ß√£o com o bot√£o
    return button
end

-- Criar o bot√£o "SPAM M" (movido para cima)
local spamButton = createButton("SpamButton", "SPAM M", UDim2.new(0, 80, 0, 40), UDim2.new(0.8, -80, 0.1, -20), Color3.fromRGB(0, 0, 0), Color3.fromRGB(255, 0, 0), screenGui)

-- Criar o bot√£o "SPAM R" (movido um pouco mais para cima)
local renderButton = createButton("RenderButton", "SPAM R", UDim2.new(0, 80, 0, 40), UDim2.new(0.8, -80, 0.25, -20), Color3.fromRGB(0, 0, 0), Color3.fromRGB(255, 0, 0), screenGui)

-- Criar o bot√£o "ESCONDER" (movido mais para baixo)
local hideButton = createButton("HideButton", "ESCONDER", UDim2.new(0, 60, 0, 30), UDim2.new(0.7, -70, 1, -160), Color3.fromRGB(0, 0, 0), Color3.fromRGB(255, 0, 0), screenGui)

-- Fun√ß√£o para exibir aviso com imagem
local function showAlert()
    StarterGui:SetCore("SendNotification", {
        Title = "C.V XIT INJECTED üíâ",
        Text = "C.V XIT BY Wesleygzts",
        Duration = 5,
        Icon = "rbxassetid://76766404101147"  -- ID da sua imagem
    })
end

-- Os bot√µes n√£o ser√£o arrast√°veis, ent√£o n√£o precisamos da fun√ß√£o makeButtonDraggable.

-- Quando o bot√£o "SPAM M" √© clicado, envia a mensagem "//MAT SEM ERRO üö©üêª"
spamButton.MouseButton1Click:Connect(function()
    sendChatMessage("//MAT SEM ERRO üö©üêª")
end)

-- Quando o bot√£o "SPAM R" √© clicado, envia a mensagem "//RENDER SEM ERRO üö©üêª"
renderButton.MouseButton1Click:Connect(function()
    sendChatMessage("//RENDER SEM ERRO üö©üêª")
end)

-- Fun√ß√£o para esconder os bot√µes
local function hideAllButtons()
    spamButton.Visible = false
    hideButton.Visible = false
    renderButton.Visible = false
end

-- Quando o bot√£o "ESCONDER" √© clicado, esconde todos os bot√µes
hideButton.MouseButton1Click:Connect(hideAllButtons)

-- Exibir o aviso ao executar o script
showAlert()
